\renewenvironment{DoxyParagraph}[1]{%
  \begin{list}{}{%
    \settowidth{\labelwidth}{40pt}%
    \setlength{\leftmargin}{\labelwidth+\labelsep}% esto es lo diferente
    \setlength{\parsep}{0pt}%
    \setlength{\itemsep}{-4pt}%
